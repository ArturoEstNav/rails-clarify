<div class="container">
  <div class="custom-eigth-container custom-vertical-spacing">
    <h1>Fill in your info</h1>
    <%= simple_form_for @patient_record do |f| %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :phone %>
      <%= f.input :gender %>
      <%= f.input :birth_date %>
      <%= f.input :weight %>
      <%= f.input :height %>
      <%= f.input :medical_condition %>
      <%= f.input :description %>
      <%= f.submit "Submit", class: "btn btn-primary text-center" %>
    <% end %>
  </div>
</div>
