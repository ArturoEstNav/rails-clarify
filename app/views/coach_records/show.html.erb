<div class="container custom-vertical-spacing">
 <h1><%= "#{@coach_record.first_name} #{@coach_record.last_name}" %></h1>
  <div class="custom-vertical-spacing">
    <div class="d-flex align-items-center">
      <div>
        <%= image_tag "https://source.unsplash.com/collection/1602384/800x400", alt: "alttext", class: "avatar-square" %>
      </div>
      <div class="d-flex flex-column align-items-start">
        <h5 class="text-success"><%= @coach_record.specialty %></h5>
        <p>Certification # <%= @coach_record.certification_number %></p>
        <p><%= @coach_record.description %></p>
        <p><i class="fas fa-phone-alt"></i> <%= @coach_record.phone %></p>
        <p><i class="far fa-envelope"></i> <%= @coach_record.user.email %></p>
      </div>
    </div>
  </div>
  <%= button_to 'Back to Plan', url_for(:back), method: :get, class: "btn btn-primary" %>
</div>

